# CHANGELOG:
# 20200326 A.Swen	created.
# 20201103 A.Swen Add a dirty way to tune the camera a bit.

# SETTINGS
date=$(date +%Y%m%d)
me=$(basename $0)
mydir=$(dirname $0)
video_device=/dev/video4

# FUNCTIONS

saver_on () {
  xset s default
  xset +dpms
}

saver_off () {
  xset s off
  xset s noblank
  xset -dpms
}

# SCRIPT

saver_off
v4l2-ctl -d $video_device --set-ctrl=white_balance_temperature_auto=0,power_line_frequency=1
v4l2-ctl -d $video_device --set-ctrl=white_balance_temperature=3200,sharpness=200
zoom
saver_on
# END
